<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/putih"
        tools:context=".DetailActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_dalam"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/background7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:text="DETAIL"
                android:textColor="@color/black"
                android:textSize="12pt"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imgbc"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView_detail"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/imgbc"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <WebView
            android:id="@+id/web_habitat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="habi"
            android:textSize="10pt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/web_hb" />

        <TextView
            android:id="@+id/txt_sfat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_x="0dp"
            android:paddingLeft="8dp"
            android:layout_y="-7dp"
            android:text="sfat"
            android:textColor="@color/black"
            android:textSize="10pt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_dalam" />

        <WebView
            android:id="@+id/web_habitatImpact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="habim"
            android:textSize="10pt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/web_habitat" />


        <TextView
            android:id="@+id/txt_nfr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="nfr"
            android:paddingLeft="8dp"
            android:textColor="@color/black"
            android:textSize="10pt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_sn" />

        <TextView
            android:id="@+id/txt_population"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="popu"
            android:paddingLeft="8dp"
            android:textColor="@color/black"
            android:textSize="10pt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_quote" />

        <TextView
            android:id="@+id/txt_sn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sn"
            android:paddingLeft="8dp"
            android:textColor="@color/black"
            android:textSize="10pt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_sfat" />

        <WebView
            android:id="@+id/web_hb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="hb"
            android:textSize="10pt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_Bycatch"/>

        <WebView
            android:id="@+id/web_biology"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_x="-30dp"
            android:layout_y="3dp"
            android:text="bio"
            android:textSize="10pt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/web_pd" />


        <WebView
            android:id="@+id/web_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="location"
            android:textSize="10pt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/web_biology" />

        <WebView
            android:id="@+id/web_pd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="pd"
            android:textSize="10pt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/web_habitatImpact" />

        <TextView
            android:id="@+id/txt_Bycatch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="bycatcj"
            android:paddingLeft="8dp"
            android:textColor="@color/black"
            android:textSize="10pt"
            app:layout_constraintTop_toBottomOf="@+id/txt_population"
            tools:layout_editor_absoluteX="-8dp" />

        <TextView
            android:id="@+id/txt_quote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="quote"
            android:paddingLeft="8dp"
            android:textColor="@color/black"
            android:textSize="10pt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_nfr" />

        <Button
            android:id="@+id/btnDet"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/btn5"
            android:text="View more . . ."
            android:paddingBottom="20dp"
            android:textStyle="bold"
            android:textSize="19dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/web_location" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>